{
  "extends": "./tsconfig.json",
  "include": ["./packages/cli/src"],
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["DOM", "ES2020"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "name": "Ceramic API",
    "readme": "none",
    "entryDocument": "index.md",
    "entryPoints": [
      "./packages/cli/src/index.ts",
    ],
    "disableSources": true,
    "excludeExternals": true,
    "excludeInternal": true,
    "excludePrivate": true,
    "githubPages": false,
    "hideBreadcrumbs": true,
    "hideInPageTOC": true
  }
}
